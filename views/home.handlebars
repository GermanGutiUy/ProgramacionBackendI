<h1>Productos</h1>

<table border="1" cellpadding="10" cellspacing="0" style="border-collapse: collapse; margin-bottom: 20px;">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Tipo</th>
      <th>Disponible</th>
    </tr>
  </thead>
  <tbody>
    {{#each payload}}
      <tr>
        <td>{{this.name}}</td>
        <td>${{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.type}}</td>
        <td>{{#if this.status}}✅{{else}}❌{{/if}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div style="margin-bottom: 20px;">
  Página {{page}} de {{totalPages}}
</div>

<div>
  {{#if hasPrevPage}}
    <a href="/?page={{prevPage}}&limit=5">⬅ Anterior</a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="/?page={{nextPage}}&limit=5" style="margin-left: 10px;">Siguiente ➡</a>
  {{/if}}
</div>
