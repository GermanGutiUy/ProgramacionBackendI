<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{#if title}}{{title}} - {{/if}}Supermercado Online</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  
  <style>
    :root {
      --primary-color: #2c3e50;
      --secondary-color: #3498db;
      --accent-color: #e74c3c;
      --success-color: #27ae60;
      --warning-color: #f39c12;
      --light-bg: #f8f9fa;
      --dark-bg: #2c3e50;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }

    .navbar {
      background: rgba(44, 62, 80, 0.95) !important;
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    }

    .navbar-brand {
      font-weight: 700;
      color: white !important;
    }

    .nav-link {
      color: rgba(255,255,255,0.8) !important;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: white !important;
      transform: translateY(-2px);
    }

    .main-container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
      margin: 20px auto;
      overflow: hidden;
    }

    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .btn {
      border-radius: 10px;
      font-weight: 600;
      padding: 10px 20px;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: var(--secondary-color);
      border: none;
    }

    .btn-primary:hover {
      background: #2980b9;
      transform: translateY(-2px);
    }

    .btn-success {
      background: var(--success-color);
      border: none;
    }

    .btn-danger {
      background: var(--accent-color);
      border: none;
    }

    .form-control {
      border-radius: 10px;
      border: 2px solid #e9ecef;
      padding: 12px 15px;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: var(--secondary-color);
      box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .table {
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .table thead th {
      background: var(--primary-color);
      color: white;
      border: none;
      font-weight: 600;
      padding: 15px;
    }

    .table tbody td {
      padding: 15px;
      border: none;
      border-bottom: 1px solid #e9ecef;
    }

    .table tbody tr:hover {
      background: #f8f9fa;
    }

    .pagination {
      gap: 5px;
    }

    .page-link {
      border-radius: 10px;
      border: none;
      color: var(--primary-color);
      font-weight: 600;
      padding: 10px 15px;
    }

    .page-link:hover {
      background: var(--secondary-color);
      color: white;
    }

    .page-item.active .page-link {
      background: var(--secondary-color);
      border-color: var(--secondary-color);
    }

    .status-badge {
      padding: 5px 10px;
      border-radius: 20px;
      font-size: 0.8em;
      font-weight: 600;
    }

    .status-available {
      background: #d4edda;
      color: #155724;
    }

    .status-unavailable {
      background: #f8d7da;
      color: #721c24;
    }

    .product-card {
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .product-card .card-body {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .product-card .card-footer {
      background: none;
      border: none;
      padding-top: 0;
    }

    .price-tag {
      background: var(--success-color);
      color: white;
      padding: 5px 10px;
      border-radius: 15px;
      font-weight: 600;
      display: inline-block;
    }

    .stock-info {
      color: var(--warning-color);
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .main-container {
        margin: 10px;
        border-radius: 15px;
      }
      
      .table-responsive {
        border-radius: 15px;
      }
      
      .btn {
        width: 100%;
        margin-bottom: 10px;
      }
    }

    .loading {
      display: none;
      text-align: center;
      padding: 20px;
    }

    .loading.show {
      display: block;
    }

    .alert {
      border-radius: 15px;
      border: none;
    }

    /* Estilos específicos para modales */
    .modal {
      z-index: 1050;
    }

    .modal-backdrop {
      z-index: 1040;
    }

    .modal-content {
      border: none;
      border-radius: 15px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .modal-header {
      border-bottom: 1px solid #e9ecef;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      color: white;
      border-radius: 15px 15px 0 0;
    }

    .modal-header .btn-close {
      filter: invert(1);
    }

    .modal-body {
      padding: 20px;
    }

    .modal-footer {
      border-top: 1px solid #e9ecef;
      padding: 15px 20px;
    }

    /* Asegurar que los formularios sean interactivos */
    .form-control, .form-select {
      pointer-events: auto !important;
      user-select: text !important;
      -webkit-user-select: text !important;
      -moz-user-select: text !important;
      -ms-user-select: text !important;
    }

    .form-control:focus, .form-select:focus {
      pointer-events: auto !important;
      outline: none !important;
      border-color: var(--secondary-color) !important;
      box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25) !important;
    }

    /* Asegurar que los botones sean clickeables */
    .btn {
      pointer-events: auto !important;
      cursor: pointer !important;
    }

    /* Asegurar que los modales no tengan problemas de z-index */
    .modal.show {
      display: block !important;
    }

    /* Estilos para inputs específicos */
    input[type="text"], 
    input[type="number"], 
    input[type="email"], 
    textarea, 
    select {
      background-color: white !important;
      color: #333 !important;
      border: 2px solid #e9ecef !important;
      transition: all 0.3s ease !important;
    }

    input[type="text"]:focus, 
    input[type="number"]:focus, 
    input[type="email"]:focus, 
    textarea:focus, 
    select:focus {
      background-color: white !important;
      color: #333 !important;
      border-color: var(--secondary-color) !important;
      box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25) !important;
    }

    /* Asegurar que los labels sean visibles */
    .form-label {
      color: #333 !important;
      font-weight: 500 !important;
      margin-bottom: 8px !important;
    }

    /* Estilos responsive para modales */
    @media (max-width: 768px) {
      .modal-dialog {
        margin: 10px !important;
        max-width: calc(100% - 20px) !important;
      }
      
      .modal-dialog.modal-lg {
        max-width: calc(100% - 20px) !important;
      }
      
      .modal-content {
        border-radius: 10px !important;
      }
      
      .modal-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 15px !important;
      }
      
      .modal-body {
        padding: 15px !important;
      }
      
      .modal-footer {
        padding: 15px !important;
      }
      
      /* Hacer que los campos se apilen en móviles */
      .row .col-md-6 {
        width: 100% !important;
        margin-bottom: 15px !important;
      }
      
      /* Ajustar tamaños de fuente */
      .modal-title {
        font-size: 1.1rem !important;
      }
      
      .form-label {
        font-size: 0.9rem !important;
      }
      
      .form-control, .form-select {
        font-size: 16px !important; /* Evita zoom en iOS */
        padding: 12px !important;
      }
      
      /* Botones más grandes para touch */
      .btn {
        padding: 12px 20px !important;
        font-size: 1rem !important;
        min-height: 44px !important; /* Tamaño mínimo para touch */
      }
    }

    @media (max-width: 576px) {
      .modal-dialog {
        margin: 5px !important;
        max-width: calc(100% - 10px) !important;
      }
      
      .modal-dialog.modal-lg {
        max-width: calc(100% - 10px) !important;
      }
      
      .modal-header {
        padding: 10px 15px !important;
      }
      
      .modal-body {
        padding: 10px 15px !important;
      }
      
      .modal-footer {
        padding: 10px 15px !important;
        flex-direction: column !important;
        gap: 10px !important;
      }
      
      .modal-footer .btn {
        width: 100% !important;
        margin: 0 !important;
      }
      
      /* Asegurar que los inputs sean legibles */
      input, textarea, select {
        font-size: 16px !important;
        line-height: 1.5 !important;
      }
      
      /* Ajustar el grid para móviles */
      .row.g-3 > .col-12 {
        margin-bottom: 15px !important;
      }
    }

    /* Asegurar que los modales funcionen en pantallas pequeñas */
    .modal {
      padding-left: 0 !important;
      padding-right: 0 !important;
    }

    /* Mejorar la experiencia táctil */
    .form-control:focus, .form-select:focus {
      transform: none !important; /* Evitar transformaciones en móviles */
    }

    /* Asegurar que los modales no se desborden */
    .modal-dialog {
      max-height: 90vh !important;
      overflow-y: auto !important;
    }

    .modal-content {
      max-height: 90vh !important;
      overflow-y: auto !important;
    }

    /* FORZAR INTERACTIVIDAD - ESTILOS CRÍTICOS */
    .modal input,
    .modal textarea,
    .modal select,
    .modal .form-control,
    .modal .form-select {
      pointer-events: auto !important;
      user-select: text !important;
      -webkit-user-select: text !important;
      -moz-user-select: text !important;
      -ms-user-select: text !important;
      background-color: white !important;
      color: #333 !important;
      border: 2px solid #e9ecef !important;
      opacity: 1 !important;
      visibility: visible !important;
      position: relative !important;
      z-index: 1 !important;
      cursor: text !important;
    }

    .modal input:focus,
    .modal textarea:focus,
    .modal select:focus,
    .modal .form-control:focus,
    .modal .form-select:focus {
      pointer-events: auto !important;
      outline: none !important;
      border-color: var(--secondary-color) !important;
      box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25) !important;
      background-color: white !important;
      color: #333 !important;
      opacity: 1 !important;
      visibility: visible !important;
      position: relative !important;
      z-index: 2 !important;
      cursor: text !important;
    }

    /* Asegurar que los botones sean clickeables */
    .modal .btn {
      pointer-events: auto !important;
      cursor: pointer !important;
      opacity: 1 !important;
      visibility: visible !important;
      position: relative !important;
      z-index: 1 !important;
    }

    /* Asegurar que los labels sean visibles */
    .modal .form-label {
      color: #333 !important;
      font-weight: 500 !important;
      margin-bottom: 8px !important;
      opacity: 1 !important;
      visibility: visible !important;
    }

    /* Asegurar que el modal esté por encima de todo */
    .modal.show {
      display: block !important;
      z-index: 1055 !important;
    }

    .modal-backdrop.show {
      z-index: 1050 !important;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-shopping-cart me-2"></i>
        Supermercado Online
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home me-1"></i>Inicio
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/productos">
              <i class="fas fa-box me-1"></i>Productos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/realtime">
              <i class="fas fa-bolt me-1"></i>Tiempo Real
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/carts">
              <i class="fas fa-shopping-bag me-1"></i>Carritos
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <div class="main-container">
      {{{body}}}
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Socket.io -->
  <script src="/socket.io/socket.io.js"></script>

  <!-- Script de inicialización -->
  <script>
    // Asegurar que Bootstrap esté cargado
    document.addEventListener('DOMContentLoaded', function() {
      console.log('🟢 Bootstrap y modales inicializados');
      
      // Verificar que Bootstrap esté disponible
      if (typeof bootstrap !== 'undefined') {
        console.log('✅ Bootstrap cargado correctamente');
        
        // Inicializar todos los modales
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
          new bootstrap.Modal(modal);
        });
        
        // FORZAR INTERACTIVIDAD - FUNCIÓN CRÍTICA
        function forceInteractivity() {
          console.log('🔧 Forzando interactividad...');
          
          // Asegurar que los formularios sean interactivos
          const inputs = document.querySelectorAll('input, textarea, select');
          inputs.forEach(input => {
            // Estilos críticos
            input.style.pointerEvents = 'auto';
            input.style.userSelect = 'text';
            input.style.webkitUserSelect = 'text';
            input.style.mozUserSelect = 'text';
            input.style.msUserSelect = 'text';
            input.style.backgroundColor = 'white';
            input.style.color = '#333';
            input.style.border = '2px solid #e9ecef';
            input.style.opacity = '1';
            input.style.visibility = 'visible';
            input.style.position = 'relative';
            input.style.zIndex = '1';
            input.style.cursor = 'text';
            
            // Remover cualquier atributo que pueda interferir
            input.removeAttribute('disabled');
            input.removeAttribute('readonly');
            
            // Asegurar que el input sea focusable
            input.tabIndex = 0;
            
            console.log('✅ Input configurado:', input.name || input.type);
          });
          
          // Asegurar que los botones sean clickeables
          const buttons = document.querySelectorAll('.btn');
          buttons.forEach(button => {
            button.style.pointerEvents = 'auto';
            button.style.cursor = 'pointer';
            button.style.opacity = '1';
            button.style.visibility = 'visible';
            button.style.position = 'relative';
            button.style.zIndex = '1';
            
            // Remover cualquier atributo que pueda interferir
            button.removeAttribute('disabled');
            
            console.log('✅ Botón configurado:', button.textContent.trim());
          });
          
          // Asegurar que los labels sean visibles
          const labels = document.querySelectorAll('.form-label');
          labels.forEach(label => {
            label.style.color = '#333';
            label.style.fontWeight = '500';
            label.style.marginBottom = '8px';
            label.style.opacity = '1';
            label.style.visibility = 'visible';
          });
        }
        
        // Ejecutar inmediatamente
        forceInteractivity();
        
        // Ejecutar cuando se abra un modal
        document.addEventListener('shown.bs.modal', function(event) {
          console.log('🟢 Modal abierto:', event.target.id);
          setTimeout(forceInteractivity, 100);
          setTimeout(forceInteractivity, 500);
          setTimeout(forceInteractivity, 1000);
        });
        
        // Ejecutar cuando se haga clic en cualquier lugar
        document.addEventListener('click', function() {
          setTimeout(forceInteractivity, 100);
        });
        
        // Ejecutar cuando se redimensione la ventana
        window.addEventListener('resize', function() {
          setTimeout(forceInteractivity, 100);
        });
        
        // Ejecutar periódicamente para asegurar que funcione
        setInterval(forceInteractivity, 2000);
        
      } else {
        console.error('❌ Bootstrap no está disponible');
      }
    });
    
    // Función para mostrar notificaciones
    function showNotification(message, type = 'success') {
      const alertDiv = document.createElement('div');
      alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
      alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
      alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      
      document.body.appendChild(alertDiv);
      
      setTimeout(() => {
        if (alertDiv.parentNode) {
          alertDiv.remove();
        }
      }, 5000);
    }
    
    // Hacer la función global
    window.showNotification = showNotification;
  </script>
</body>
</html>
